    <AssemblyName>SemanticKernel.Process.Utilities.UnitTests</AssemblyName>
    <TargetFrameworks>net10.0</TargetFrameworks>
    <IsTestProject>true</IsTestProject>
    <IsPackable>false</IsPackable>
    <NoWarn>
